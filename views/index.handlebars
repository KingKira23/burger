<h1>Burgers</h1>

<h2>Not yet eaten</h2>

{{#each burgers}}
    {{#unless devoured}}
      {{> burgers/devoured-block devoured=true}}
    {{/unless}}
  {{/each}}

<h2>Devoured</h2>

  {{#each burgers}}
    {{#if devoured}}
      {{> buregers/devoured-block devoured=false}}
    {{/if}}
  {{/each}}

  <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Yet Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>